<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.a_zone2498.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/transparent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnLeft"
            style="?attr/buttonStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_left"
            android:contentDescription="Move Left"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnRight"
            style="?attr/buttonStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_right"
            android:contentDescription="Move Right"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnShoot"
            style="?attr/buttonStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_shoot"
            android:contentDescription="Shoot"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnJump"
            style="?attr/buttonStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_up"
            android:contentDescription="Jump"
            android:padding="12dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>
